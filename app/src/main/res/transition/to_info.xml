<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    android:transitionOrdering="sequential"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <changeBounds android:duration="250">
        <targets>
        <target android:targetId="@id/img_painting"/>
        </targets>
    </changeBounds>

    <fade android:duration="250"
        android:startDelay="300">
        <targets>
            <target android:targetId="@id/tv_content_desc"/>
            <target android:targetId="@id/img_btn_close"/>
        </targets>
    </fade>
    <!--tv_content_title, tv_artist_name-->

    <fade android:duration="250">
        <targets>
            <target android:targetId="@id/tv_content_title"/>
            <target android:targetId="@id/tv_artist_name"/>
        </targets>
    </fade>

</transitionSet>